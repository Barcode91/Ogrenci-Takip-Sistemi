<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    >

    <Spinner
        android:id="@+id/spinnerDersler"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:entries="@array/dersler"

        ></Spinner>
    <TextView
        android:id="@+id/txtVize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIZE"

        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:id="@+id/txtFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINAL"

        android:layout_toRightOf="@id/txtVize"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:id="@+id/txtOdevler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ODEVLER"
        android:layout_toRightOf="@id/txtFinal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:id="@+id/txtProje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJE"

        android:layout_toRightOf="@id/txtOdevler"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="75dp"
        />
<TextView
    android:id="@+id/txt_vizeNotu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtVize"
    android:layout_marginLeft="32dp"
    android:text="VIZENOTU"
    android:layout_marginTop="25sp"
    />
    <TextView
        android:id="@+id/txt_finalNotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_vizeNotu"
        android:layout_below="@id/txtFinal"
        android:layout_marginLeft="32dp"
        android:text="FNLNOTU"
        android:layout_marginTop="25sp"
        />
    <TextView
        android:id="@+id/txt_odevNotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_finalNotu"
        android:layout_below="@id/txtFinal"
        android:layout_marginLeft="32dp"
        android:text="ODVNOTU"
        android:layout_marginTop="25sp"
        />
    <TextView
        android:id="@+id/txt_ProjeNotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_odevNotu"
        android:layout_below="@id/txtFinal"
        android:layout_marginLeft="32dp"
        android:text="PRJNOTU"
        android:layout_marginTop="25sp"
        />
    <TextView
        android:id="@+id/txt_harfNotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_odevNotu"
        android:layout_centerHorizontal="true"
        android:text="Harf Notu"
        android:layout_marginTop="45dp"
        />




</RelativeLayout>