<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    >

    <Spinner
        android:id="@+id/spinnerDersler"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:entries="@array/dersler"

        ></Spinner>
    <TextView
        android:id="@+id/txtVize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIZE"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="85dp"

        />
    <TextView
        android:id="@+id/txtFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINAL"

        android:layout_toRightOf="@id/txtVize"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="85dp"
        />
    <TextView
        android:id="@+id/txtOdevler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ODEVLER"
        android:layout_toRightOf="@id/txtFinal"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="85dp"
        />
    <TextView
        android:id="@+id/txtProje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJE"

        android:layout_toRightOf="@id/txtOdevler"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="85dp"
        />
<TextView
    android:id="@+id/txt_vizeNotu"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtVize"
    android:layout_marginLeft="32dp"
    android:text="GG"
    android:layout_marginTop="25sp"
    android:textSize="25sp"
    />
    <TextView
        android:id="@+id/txt_finalNotu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_vizeNotu"
        android:layout_below="@id/txtFinal"
        android:layout_marginLeft="35dp"
        android:text="GG"
        android:layout_marginTop="25sp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/txt_odevNotu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFinal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/txt_finalNotu"
        android:textSize="25sp"
        android:text="GG" />
    <TextView
        android:id="@+id/txt_ProjeNotu"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_odevNotu"
        android:layout_below="@id/txtFinal"
        android:layout_marginLeft="59dp"
        android:text="GG"
        android:textSize="25sp"
        android:layout_marginTop="25sp"
        />
    <TextView
        android:id="@+id/txt_harfNotuikaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_odevNotu"
        android:layout_centerHorizontal="true"
        android:text="Harf Notu"
        android:layout_marginTop="55dp"

        />
    <TextView
        android:id="@+id/txt_harfNotu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_harfNotuikaz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text=""
        android:textSize="95sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnItiraz"
        android:layout_width="210dp"
        android:layout_height="63dp"
        android:layout_below="@id/txt_harfNotu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:background="@drawable/btnbg"
        android:text="itiraz et" />



</RelativeLayout>