<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainbackground"
    >

    <TextView
        android:id="@+id/txtikaz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lutfen Bir Sinif Seciniz.."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="19sp"
        />
    <Spinner
        android:id="@+id/siniflar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtikaz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:spinnerMode="dropdown"
        android:entries="@array/siniflar"
        android:popupBackground="@android:color/holo_blue_dark"
        android:backgroundTint="@android:color/holo_red_dark"

        >
    </Spinner>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/siniflar"
        android:layout_marginTop="15dp"
        ></ListView>

</RelativeLayout>