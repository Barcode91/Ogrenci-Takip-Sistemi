<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/list_arkaplan"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="3dp">
    <LinearLayout
        android:id="@+id/degerlendirme_list_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dalga_efect"

        >

        <TextView
            android:id="@+id/ogretmenKimlik_degerlendirme"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Ã¶gretmen Kimlik"
            android:padding="5dp"
            android:textColor="@color/cardview_dark_background"
            />
        <TextView
            android:id="@+id/list_degerlendirme"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="degerlendirmeler"
            android:textStyle="italic|bold"
            android:textColor="@color/cardview_dark_background"
            android:padding="5dp"/>
        
    </LinearLayout>

</android.support.v7.widget.CardView>