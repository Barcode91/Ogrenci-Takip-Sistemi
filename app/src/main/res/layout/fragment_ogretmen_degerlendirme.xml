<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mainbackground">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Ogrenciniz Hakkındaki Gorüslerinizi Giriniz"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Degerlendirmeleriniz Yanlızca Veli \nTarafından Görüntülenecektir"
                android:textColor="@android:color/holo_red_dark" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/DegerlendirmeGecmisi"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:layout_below="@id/textView6"
                android:layout_marginTop="5dp">

            </android.support.v7.widget.RecyclerView>
            <!--<ScrollView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent">-->
            <!--<RelativeLayout-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="400dp"-->
            <!--android:layout_marginTop="270dp"-->
            <!--&gt;-->

            <EditText
                android:id="@+id/editxt_ogretmenDegerlendirmeGirisi"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@id/DegerlendirmeGecmisi"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_blue_bright"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Degerlendirmenizi Bu Kısıma Girebilirsiniz"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <Button
            android:id="@+id/btn_degerlendirmeKayit"
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:layout_below="@id/editxt_ogretmenDegerlendirmeGirisi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnbg"
            android:text="GONDER" />


            <!--</RelativeLayout>-->

            <!--</ScrollView>-->
</RelativeLayout>

