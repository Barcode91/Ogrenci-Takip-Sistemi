<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ogrenciniz Hakkındaki Gorüslerinizi Giriniz"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
         />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degerlendirmeleriniz Yanlızca Veli \nTarafından Görüntülenecektir"
        android:layout_below="@id/textView5"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/DegerlendirmeGecmisi"
        android:layout_below="@id/textView6"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="300dp"
        ></android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/editxt_ogretmenDegerlendirmeGirisi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/DegerlendirmeGecmisi"
        android:ems="10"
        android:hint="Degerlendirmenizi Bu Kısıma Girebilirsiniz"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_bright"
        />

    <Button
        android:id="@+id/btn_degerlendirmeKayit"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@id/editxt_ogretmenDegerlendirmeGirisi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/btnbg"
        android:text="GONDER" />





</RelativeLayout>